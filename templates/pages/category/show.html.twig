{% extends 'base.html.twig' %}

{% block title %}Mon projet - Catégories public{% endblock %}

{% block body %}
<div class="container mt-4">
<h1>Catégories public</h1>

<table class="table table-hover">
    <tbody>
    <div class="flex-box">
    {% for categorie in categories %}
    
        <div class="card ">
            <img src="http://localhost:8000/images/categories/{{ categorie.imageName }}" class="card-img-top" alt=".{{ categorie.name}}">
                <div class="card-body">
                    <h5 class="card-title">{{ categorie.name}}</h5>
                        <p class="card-text">{{ categorie.description}}</p>
                            <a href="#" class="btn btn-primary">Voir la catégorie " {{ categorie.name}} "</a>

                            {# mettre ... quand la description est trop longue #}
                            
                </div>
        </div>

    {% endfor %}
        </div>
</div>
{% endblock %}