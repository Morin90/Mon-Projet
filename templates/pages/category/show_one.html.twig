{% extends 'base.html.twig' %}

{% block title %}Mon projet - Catégories public
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Catégorie public pour voir les vélos d'une catégorie</h1>

		<table class="table table-hover">
			<tbody>
				<div class="flex-box">
					<div class="card ">
						<div class="card-body">
							<h5 class="card-title">{{ categorie.name}}</h5>
                                <image src="http://localhost:8000/images/categories/{{ categorie.imageName }}" class="card-img-top" alt=".{{ categorie.name}}">
							{% for velo in velos %}

								<a href="{{ path('velo.show', {'id': velo.id}) }}" class="btn btn-primary mt-2 w-100">
									{{ velo.name}}
								</a>

								{# mettre ... quand la description est trop longue #}


							{% endfor %}
						</div>
					</div>
				</div>
			</tbody>
		</div>
	{% endblock %}
