{% extends 'base.html.twig' %}

{% block title %}Mon projet-Modification du compte utilisateur{% endblock %}

{% block body %}
{% if app.user.id %}

<div class="container">
<h1 class="mt-4" style="color: var(--b-violet)">Mon Profil</h1>
{% for message in app.flashes('warning') %}
    <div class="alert alert-warning mt-4">
        {{ message }}
    </div>
{% endfor %}
{{form(form)}}

</div>
<div class="d-flex justify-content-center">
<a class="btn mt-4" style="width: 16rem; height: 2.75rem; background-color: var(--b-violet) " href="{{ path('user.edit.password', {'id': app.user.id}) }}" role="button">
				<p class="text-white" style="text-align: center; padding-top: 0.25rem">Modifier mon mot de passe</p>
			</a>
</div>
            {% endif %}
{% endblock %}
