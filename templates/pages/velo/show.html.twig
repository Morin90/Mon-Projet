{% extends 'base.html.twig' %}
{% block title %}Mon projet - {{ velo.name}}
{% endblock %}

{% block body %}
	<h3 class="mt-2 text-center " style="color: var(--b-violet)">{{ velo.marque}}</h3>
	<h2 class="mt-1 text-center">{{ velo.name}}</h2>

	<div class="flex-box">

		<div class="cardV" style="width: 50rem;">
			<image src="{{ asset('images/velos/' ~ velo.imageName) }}" class="card-img-top1" style ="" alt=".{{ velo.name}}">
		</image>
	</div>
	<div class="card-body d-flex justify-content-start flex-column align-items-center " style="width: 25rem;">
		<div class="flex-price " style="color: var(--text-red)">
			<h3 class="card-price mt-1 mx-5">Prix :
				{{ velo.prix}}
				€</h3>
		</div>
		<p class="card-text">{{ velo.description}}</p>
		{% if details %}
			<div class="col-md-4">
				<label for="inputState" class="form-label">Taille</label>
				<select id="inputState" class="form-select">
					<option selected>M</option>
					<option selected>L</option>
					<option selected>XL</option>
				</select>
			</div>
<div class="col-md-4">
				<label for="inputState" class="form-label">Roues</label>
				<select id="inputState" class="form-select">
					<option selected>20</option>
					<option selected>21</option>
					<option selected>22</option>
					<option selected>23</option>
					<option selected>24</option>
					<option selected>25</option>
					<option selected>26</option>
					<option selected>27</option>
					<option selected>28</option>
					<option selected>29</option>
				</select>
			</div>
			<div class="col-md-4">
				<label for="inputState" class="form-label">Vitesses</label>
				<select id="inputState" class="form-select">
					<option selected>7</option>
					<option selected>8</option>
					<option selected>9</option>
					<option selected>10</option>
					<option selected>11</option>
					<option selected>12</option>
					<option selected>13</option>
					<option selected>14</option>
					<option selected>15</option>
				</select>
			</div>
		{% endif %}
		<div class="mt-1 mx-5">
			{% for i in 1..5 %}
				{% if i <= notes %}
					<i class="fas fa-star " style="color: gold"></i>
					{# étoile or (remplie) #}
				{% else %}
					<i class="far fa-star"></i>
					{# étoile blanche (vide) #}
				{% endif %}
			{% endfor %}


		</div>
	</div>
</div></tbody></div>{% endblock %}
