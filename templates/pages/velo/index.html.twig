{% extends 'base.html.twig' %}

{% block title %}Mon projet - Vélos{% endblock %}

{% block body %}
<div class="container mt-4">
{# read and display just one flash message type #}

{% for message in app.flashes('success') %}
    <div class="alert-success">
        {{ message }}
    </div>
{% endfor %}
{% if not velos.items is same as ([]) %}
<h1>Nos Vélos</h1>
<div class="count">
<h4>Il y a {{velos.totalItemCount}} Vélos au total. </h4>
</div>

<table class="table table-hover mt-4">
  <thead>
    <tr>
      <th scope="col">Numéro</th>
      <th scope="col">Nom</th>
      <th scope="col">Prix</th>
      <th scope="col">Date de création</th>
    </tr>
  </thead>
  <tbody>
    {% for velo in velos %}
    <tr class="table-primary">
      <th scope="row">{{ velo.id}}</th>
      <td>{{ velo.name}}</td>
      <td>{{ velo.prix }}</td>
      <td>{{ velo.createdAt|date('d/m/Y') }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
<div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(velos) }}
</div>
{% else %}
<h4>Il n'y a pas de vélos. </h4>
{% endif %}
</div>
{% endblock %}
